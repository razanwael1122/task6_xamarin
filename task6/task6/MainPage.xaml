<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="task6.MainPage">
    <ScrollView>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="10" CornerRadius="0">
                <Label  HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label x:Name="StatusLabel" Text="Upload status" Padding="30,10,30,10"></Label>
            
            
        

        <Button Text="Pick photo"
                WidthRequest="400"
                HeightRequest="80" 
                BackgroundColor="Navy"
                Clicked="Button_Clicked_1"/>
            
                
          
        </StackLayout>
    </ScrollView>
</ContentPage>
